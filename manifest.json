{
  "manifest_version": 3,
  "name": "LinkRight - Job Search CRM",
  "version": "1.0.0",
  "description": "Smart LinkedIn engagement automation with AI-powered comments for job search success",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "clipboardWrite",
    "activeTab",
    "notifications",
    "management",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://127.0.0.1/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "LinkRight - Job Search CRM"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["config.js", "runner-control.js", "content.js"],
      "css": ["sidebar.css"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle-engagement": {
      "suggested_key": {
        "default": "Alt+E",
        "mac": "Alt+E"
      },
      "description": "Toggle Engagement Mode"
    },
    "toggle-runner": {
      "suggested_key": {
        "default": "Alt+R",
        "mac": "Alt+R"
      },
      "description": "Toggle Runner ON/OFF"
    },
    "toggle-automation": {
      "suggested_key": {
        "default": "Alt+A",
        "mac": "Alt+A"
      },
      "description": "Start/Stop Automation"
    },
    "open-settings": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Open Settings"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}
