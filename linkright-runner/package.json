{
  "name": "linkright-runner",
  "version": "1.0.0",
  "description": "LinkedIn Automation Runner - Local HTTP API with Playwright",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "lint": "eslint server/",
    "test": "node server/test.js",
    "stop": "curl -s -X POST http://127.0.0.1:3001/api/runner/stop -H 'x-runner-token: dev-secure-token-12345' -H 'Content-Type: application/json'"
  },
  "keywords": ["linkedin", "automation", "playwright"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "playwright": "^1.40.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
