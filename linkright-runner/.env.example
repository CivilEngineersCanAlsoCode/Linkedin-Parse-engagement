# LinkRight Runner Configuration
# Copy this to .env and update values

# Security
RUNNER_TOKEN=your-secure-token-change-this

# Server
PORT=3001
HOST=127.0.0.1

# Thresholds (per session)
MAX_COMMENTS_PER_SESSION=20
MAX_LIKES_PER_SESSION=50
MAX_CONNECTIONS_PER_SESSION=10
SESSION_TIMEOUT_MINS=60

# AI Webhook
AI_WEBHOOK_URL=https://n8n.linkright.in/webhook/linkedin-reply
WEBHOOK_TIMEOUT_MS=10000

# Timing (milliseconds) - randomized for human-like behavior
MIN_ACTION_DELAY_MS=3000
MAX_ACTION_DELAY_MS=8000
MIN_SCROLL_DELAY_MS=2000
MAX_SCROLL_DELAY_MS=5000

# Playwright
HEADLESS=false
SLOW_MO=100

# Post Filtering
MIN_REACTIONS_THRESHOLD=5
MIN_COMMENTS_THRESHOLD=2
MIN_REPOSTS_THRESHOLD=1
